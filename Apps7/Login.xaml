<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apps7.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido al sistema" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña" IsPassword="True"></Entry>
            <Button x:Name="btnIniciar" Text="Iniciar" Clicked="btnIniciar_Clicked"></Button>
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>