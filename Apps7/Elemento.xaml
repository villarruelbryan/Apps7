<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apps7.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar o Eliminar Usuarios"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Ingrese su nombre" x:Name="txtNombre"></Entry>
            <Entry Placeholder="Ingrese su usuario" x:Name="txtUsuario" ></Entry>
            <Entry Placeholder="Ingrese su contraseña" x:Name="txtContrasena" IsPassword="True"></Entry>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" ></Button>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>